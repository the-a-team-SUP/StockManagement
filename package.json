{
    "name": "stockmanagement",
    "version": "1.0.0",
    "description": "To provide a better stock/warehouse management system to facilitate on a long term the companyâ€™s products to be easily manageable and easy to track the flows and it can be used to sell anything. This will help the company have an idea of everything that enters and goes out of the company.",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && node --require @babel/polyfill dist/index.js",
        "test": "npm run droptables && npm run createtables && cross-env NODE_ENV=isTesting nyc --reporter=text --reporter=lcov mocha --require @babel/register --require @babel/polyfill ./server/tests/*.spec.js --exit",
        "dev": "nodemon --exec babel-node ./server/index.js",
        "coveralls": "npm test && nyc report --reporter=text-lcov | coveralls",
        "build": "babel server -d dist",
        "lint": "eslint server",
        "createtables": "node --require @babel/polyfill --require @babel/register server/models/addTables",
        "droptables": "node --require @babel/polyfill --require @babel/register server/models/deleteTables",
        "add-users": "node --require @babel/polyfill --require @babel/register server/models/addUsers"
    },
    "nyc": {
        "exclude": "server/tests/*.spec.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/the-a-team-SUP/StockManagement.git"
    },
    "author": "The A Team",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "coveralls": "^3.0.6",
        "eslint": "^6.5.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-node": "^4.0.0",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-prettier": "^3.1.1",
        "mocha": "^6.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nodemon": "^1.19.4",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2"
    },
    "dependencies": {
        "@babel/core": "^7.8.3",
        "@babel/node": "^7.6.2",
        "@babel/polyfill": "^7.8.3",
        "@babel/preset-env": "^7.8.3",
        "@babel/register": "^7.8.3",
        "@hapi/joi": "^16.1.8",
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "cross-env": "^6.0.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.24.0",
        "morgan": "^1.9.1",
        "multer": "^1.4.2",
        "nodemailer": "^6.4.0",
        "pg": "^7.17.1",
        "uuid": "^3.3.3"
    },
