{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "singleQuote": 0,
        "doubleQuote": 0,
        "indent": 0,
        "no-unused-vars": "warn",
        "no-restricted-globals": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "consistent-return": "off",
        "class-methods-use-this": "off",
        "import/no-mutable-exports": "off",
        "no-console":"off",
        "camelcase": "off"
    }
}
